<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="field">
    <strong><h5><%= form.label :title %></h5></strong>
    <%= form.text_field :title, :class => 'input' %>
  </div>

  <br>
  <div class="field">
    <strong><h5><%= form.label :date %></h5></strong>
    <%= form.datetime_local_field :date, :value => "#{@current_date}", :class => 'input' %><i class="fa fa-calendar" aria-hidden="true"></i>
  </div>

  <br>
  <div class="field">
    <strong><h5><%= form.label :location %></h5></strong>
    <%= form.text_field :location, :class => 'input' %><i class="fa fa-map-marker" aria-hidden="true"></i>
  </div>

  <br>
  <div class="field input">
    <strong><h5><%= form.label :description %></h5></strong>
    <%= form.text_area :description, :class => 'input'  %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit 'Submit', :class => 'btn btn-primary btn' %>
  </div>
<% end %>
